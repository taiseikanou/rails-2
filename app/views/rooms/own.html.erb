<div class="container">
  <h3>登録施設一覧</h3>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>料金</th>
        <th>作成日</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr>
        <% if room.image.attached? %>
          <td><%= image_tag room.image, size: "100x100" %></td>
          <% else %>
          <td><%= image_tag 'room.png', size: "100x100" %></td>
        <% end %>
          <td><%= link_to room.room_name, room %></td>
          <td><%= room.room_detail %></td>
          <td><%= room.price %>円</td>
          <td><%= room.updated_at.to_s(:datetime_jp)%></td>
          <td>
            <%= link_to "編集", [:edit, room] %><br>
            <%= link_to "削除", room_path(room), method: :delete, data: { confirm: "本当に削除しますか？" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>