<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="imag_show">
        <a href="#" onclick="goBack()">戻る</a>
        <% if @room.image.attached? %>
          <%= image_tag @room.image, class: "responsive-image" %>
        <% else %>
          <%= image_tag 'room', class: "responsive-image" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="room">
        <div class="room_show">
          <h2><%= @room.room_name %></h2>
          <p><%= @room.price %>円</p>
        </div>
        <p><%= @room.address %></p>
        <p><%= @room.room_detail %></p>
        <%= form_with model:@reservation do |f| %>
          <%= render "shared/error", obj: @reservation %>
          <div class="reservation">
            <div class="form-group">
              <%= f.label :チェックイン %>
              <%= f.date_field :check_in, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :チェックアウト %>
              <%= f.date_field :check_out, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :人数 %>
              <%= f.number_field :number_of_guests, placeholder: "ゲストの数を入力してください", class: "form-control" %>
            </div>
          </div>
          <%= f.hidden_field :room_id, value: @room.id %>
          <%= f.hidden_field :user_id, value: @room.id %>
          <%= f.submit "予約する", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


<script>
  function goBack() {
    window.history.back();
  }
</script>


